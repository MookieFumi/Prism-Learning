<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PrismLearning.Views.LoginView" >
    <ContentPage.Content>
       <Grid Padding="10" VerticalOptions="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
            <Label Text="User" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
            <Entry Text="{Binding User}" Keyboard="Email" Grid.Row="0" Grid.Column="1"/>
            <Label Text="Password"  Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
            <Entry Text="{Binding Password}" IsPassword="true" Grid.Row="1" Grid.Column="1"/>
            <Button Text="Login" Command="{Binding LoginCommand}" Grid.Row="2" Grid.ColumnSpan="2"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>
