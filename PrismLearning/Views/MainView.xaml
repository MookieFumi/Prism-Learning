<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PrismLearning.Controls;assembly=PrismLearning"
    x:Class="PrismLearning.Views.MainView"
    Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>
            <StackLayout VerticalOptions="Start">
                <Button Text="Go To PlayersView" Command="{Binding GoToPlayersViewCommand}"/>
                <Button Text="Show panel" Command="{Binding PanelCommand}" />
            </StackLayout>
            <controls:Panel MessageText="Ei! What do you want?" 
                            AcceptText="Accept" 
                            AcceptCommand="{Binding PanelCommand}"
                            CancelText="Cancel" 
                            CancelCommand="{Binding PanelCommand}"
                            IsVisible="{Binding IsPanelVisible}" 
                            VerticalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
